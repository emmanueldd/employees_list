- date = (locales[:date] + locales[:index].days).to_date
.col-md-1.col-day{class: (date === DateTime.now ? 'current-day' : '')}
  %h5= I18n.l(date, format: :short)
  %ul.list-group
    - @bookings.each do |booking|
      - if booking.start_time.to_date == date
        %li.list-group-item
          %small
            %span.label.label-info= I18n.l(booking.start_time.to_time, format: :short)
            %span.label.label-warning= booking.status
            %br
            = booking.title
