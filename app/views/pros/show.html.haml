              / Pagination
              .clearfix
              .row
                .col-md-12
                  / Pagination
                  .pagination-container.margin-top-30
                    %nav.pagination
                      %ul
                        %li
                          %a.current-page{:href => "#"} 1
                        %li
                          %a{:href => "#"} 2
                        %li
                          %a{:href => "#"}
                            %i.sl.sl-icon-arrow-right
              .clearfix
              / Pagination / End
            / Add Review Box
            #add-review.add-review-box
              / Add Review
              %h3.listing-desc-headline.margin-bottom-20 Add Review
              %span.leave-rating-title Your rating for this listing
              / Rating / Upload Button
              .row
                .col-md-6
                  / Leave Rating
                  .clearfix
                  .leave-rating.margin-bottom-30
                    %input#rating-1{:name => "rating", :type => "radio", :value => "1"}/
                    %label.fa.fa-star{:for => "rating-1"}
                    %input#rating-2{:name => "rating", :type => "radio", :value => "2"}/
                    %label.fa.fa-star{:for => "rating-2"}
                    %input#rating-3{:name => "rating", :type => "radio", :value => "3"}/
                    %label.fa.fa-star{:for => "rating-3"}
                    %input#rating-4{:name => "rating", :type => "radio", :value => "4"}/
                    %label.fa.fa-star{:for => "rating-4"}
                    %input#rating-5{:name => "rating", :type => "radio", :value => "5"}/
                    %label.fa.fa-star{:for => "rating-5"}
                  .clearfix
                .col-md-6
                  / Uplaod Photos
                  .add-review-photos.margin-bottom-30
                    .photoUpload
                      %span
                        %i.sl.sl-icon-arrow-up-circle
                        Upload Photos
                      %input.upload{:type => "file"}/
              / Review Comment
              %form#add-comment.add-comment
                %fieldset
                  .row
                    .col-md-6
                      %label Name:
                      %input{:type => "text", :value => ""}/
                    .col-md-6
                      %label Email:
                      %input{:type => "text", :value => ""}/
                  %div
                    %label Review:
                    %textarea{:cols => "40", :rows => "3"}
                %button.button Submit Review
                .clearfix
